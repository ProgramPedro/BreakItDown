<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fx:id="scrollPane" fitToWidth="true" fx:controller="com.example.breakitdown.BreakItDownController" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ADD8E6;">
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
       <Label fx:id="instructionText" text="Break-It-Down" textAlignment="CENTER" textFill="#846854">
          <font>
             <Font name="System Bold" size="14.0" />
          </font></Label>
       <Label fx:id="instructionText1" layoutX="63.0" layoutY="30.0" text="copy and paste spotify playlist link into text field" textAlignment="CENTER" textFill="#846854">
          <font>
             <Font size="14.0" />
          </font></Label>

      <Label fx:id="submitText" textFill="#846854" />
       <TextField fx:id="spotifyPlaylistURL" promptText="Spotify playlist url..." style="-fx-background-color: #eee9e0;" />
      <Button onAction="#onSubmitButtonClick" style="-fx-background-color: #846854; -fx-text-fill: #eee9e0;" text="Submit" />
       <AnchorPane fx:id="pieChartContainer" prefHeight="200.0" prefWidth="200.0" />
    </VBox>
</ScrollPane>
